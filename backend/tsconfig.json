{
  "ts-node": { "files": true },
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": false,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
  },
  "include": ["./src/**/*.ts", "./src/@types/*.d.ts"],
  "exclude": ["node_modules"]
}
